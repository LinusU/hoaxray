
// hr-blue = #40f
hr-blue = #00f
hr-grey = #d8d8d8
hr-red = #e00
hr-green = #0e9

hr-btn()
  color white
  background black
  border none
  display inline-block
  padding 12px 28px
  border-radius 6px
  text-decoration none

block-dash()
  &>div
    position relative
    &:before
      content '-'
      font-family 'Hoaxray', sans-serif
      position absolute
      top 2px
      left 24px
      font-size 48pt

body
  font-weight bold
  font-family 'Arial'

h1, h2, h3, h4, h5, h6
  font-weight normal
  font-family 'Hoaxray', sans-serif

h1
  font-size 48pt

hr
  border 0
  clear both
  border-top 1px solid #666

:focus
  outline none

header
  background black
  div
    width 1020px
    margin 0 auto
    overflow hidden
    position relative
  a
    display block
    height 72px
    line-height 72px
    text-decoration none
    text-transform lowercase
    font-family 'Hoaxray'
    font-weight normal
    font-size 24pt
    float left
    color white
    padding 0 40px
    background-repeat no-repeat
    background-position center center
  a.logo
    background-color hr-blue
    width 120px
    margin-right 120px
    text-align center
  iframe#fb
    border none
    overflow hidden
    height 21px
    position absolute
    width 140px
    top 26px
    left 860px

section
  >div
    width 1020px
    margin 0 auto

.block-1
  padding 48px 0
  background hr-grey
  >div
    width 820px
    padding-left 200px
  h1:nth-child(1)
    margin 0
    width 780px
  h1:nth-child(2)
    margin 0
    color hr-blue
  h1:nth-child(3)
    margin 48px 0 12px
  a.order
    hr-btn()

.block-2
  color white
  background black
  iframe
    display block
    margin 0 auto
    width 100%
    max-width 1020px

.block-get-hoaxray
  block-dash()
  padding 48px 0 40px
  color white
  background hr-blue
  >div
    width 820px
    padding-left 200px
  h1
    margin 0

.block-3
  padding 48px 0
  background hr-grey
  h1
    margin 0
  .slides
    width 1020px
    height 430px
    overflow hidden
    .wrap
      width 5*1020px
      height 430px
      transition transform 400ms ease-in-out
      &.pos-1
        transform translateX(0px)
      &.pos-2
        transform translateX(-1020px)
      &.pos-3
        transform translateX(-2040px)
      &.pos-4
        transform translateX(-3060px)
      &.pos-5
        transform translateX(-4080px)
      div
        height 100%
        width 1020px
        float left
        background-position center
        background-repeat no-repeat
      div:nth-child(1)
        background-image url('hr-white.png')
      div:nth-child(2)
        background-image url('hr-red.png')
      div:nth-child(3)
        background-image url('hr-blue.png')
      div:nth-child(4)
        background-image url('hr-green.png')
      div:nth-child(5)
        background-image url('hr-black.png')
  .colors, .order
    width 50%
    float left
    margin 24px 0 28px
  .colors
    span
      display inline-block
      width 38px
      height 38px
      border-radius 19px
      box-shadow 0 0 4px rgba(0,0,0,0.3)
      margin 2px
    span:nth-child(1)
      background white
    span:nth-child(2)
      background hr-red
    span:nth-child(3)
      background hr-blue
    span:nth-child(4)
      background hr-green
    span:nth-child(5)
      background black
  .order
    text-align right
    a
      hr-btn()

.block-4
  padding 24px 0
  background-color hr-grey
  background-image url(vrcard.png)
  background-size 1020px auto
  background-position center bottom
  background-repeat no-repeat
  min-height 592px
  >div
    position relative
  h1
    margin 0
    font-size 120pt
    line-height 150px
  h1:nth-child(2)
    position absolute
    top 128px
    right 64px
    font-size 140pt
  h1:nth-child(3)
    position absolute
    top 370px
    left 0
    font-size 140pt
  p
    width 260px
    padding 30px 0

.block-5
  padding 24px 0
  color white
  background black
  >div
    width 310px
    padding-right 710px

.block-6
  padding 24px 0
  color white
  background black
  >div
    width 510px
    padding-left 510px
  table tr td:first-child
    width 100px

.block-order
  padding 24px 0 208px
  background-color hr-grey
  background-image url('package.png')
  background-size 1000px auto
  background-repeat no-repeat
  background-position center bottom
  >div
    width 820px
    padding-left 200px
  h1
    width 640px
  p
    width 320px
  p:nth-child(2)
    margin-bottom 4px
  p:nth-child(3)
    margin-top 4px
    text-indent 12px
  p:nth-child(4)
    color hr-blue
  h1:nth-child(5)
    width 540px
  [type="email"]
    border 0
    background transparent
    padding-bottom 2px
    border-bottom 1px solid #666
    font-size 16pt
    font-weight normal
    margin 24px 0 12px
    width 320px
  [type="submit"]
    margin-top 12px
    hr-btn()
